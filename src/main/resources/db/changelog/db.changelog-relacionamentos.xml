<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

<changeSet id="create_relation_doenca_medicamento" author="douglas.mendonca">
		<createTable tableName="doenca_medicamento">
			<column name="id" type="${TYPE_ID}">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_DOENCA_MEDICAMENTO"/>
			</column>
			<column name="id_doenca" type="${TYPE_ID}">
				<constraints nullable="false" />
			</column>
			<column name="id_medicamento" type="${TYPE_ID}">
				<constraints nullable="false" />
			</column>
		</createTable>
	                                                 
	</changeSet>
	<changeSet id="relation_medicamento" author="douglas.mendonca">
		 <addForeignKeyConstraint 	baseColumnNames="id_medicamento"
	                            	baseTableName="doenca_medicamento"
	                            	deferrable="true"
					            	initiallyDeferred="true"
						            onDelete="CASCADE"
		                            constraintName="FK_MEDICAMENTO"
		                            referencedColumnNames="id_medicamento"
		                            referencedTableName="medicamento"/>
	</changeSet> 
	
</databaseChangeLog>