<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet id="alergia" author="larissa.andrade">
		<createTable tableName="alergia">
			<column name="id_alergia" type="${TYPE_ID}">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="PK_ALERGIA" /></column>
			<column name="tipo_alergia" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" ></constraints></column>
			<column name="data_descoberta" type="${TYPE_DATA}">
				<constraints nullable="false" /></column>
			<column name="medicamento" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" /></column>
			<column name="local_afetado" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" /></column>
			<column name="efeitos" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" /></column>
		</createTable>
	</changeSet>

	<changeSet id="medicamentoContinuo1" author="alan.secundo">
		<createTable tableName="medicamento_continuo">
			<column name="id_medicamento_continuo" type="${TYPE_ID}">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_MEDICAMENTOCONTINUO"/>
			</column>
			<column name="id_medicamento" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" />
			</column>
			<column name="tipo_medicamento" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" />
			</column>
			<column name="quantidade_de_consumo" type="${TYPE_NUMBER}">
				<constraints nullable="false" />
			</column>	
			<column name="intervalo_de_consumo" type="${TYPE_TIME}">
				<constraints nullable="false" />
			</column>	
			<column name="data_consumo" type="${TYPE_DATA}">
				<constraints nullable="false" />
			</column>							
		</createTable>
	</changeSet>

	<changeSet id="doenca1" author="douglas.mendonca">
		<createTable tableName="doenca">
			<column name="id_doenca" type="${TYPE_ID}">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_DOENCA"/>
			</column>
			<column name="nome_doenca" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" />
			</column>	
			<column name="data_descoberta" type="${TYPE_DATA}">
				<constraints nullable="false" />
			</column>
			<column name="medicamento" type="${TYPE_DESCRICAO}">
				<constraints nullable="false" />
			</column>			
		</createTable>
	</changeSet>
	
</databaseChangeLog>