<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="create_table_contato_emergencia" author="camila.morais">
		<createTable tableName="contato_emergencia">
			<column name="id_contato_emergencia" type="${TYPE_ID}">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="PK_CONTATO_EMERGENCIA" />
			</column>
			<column name="tipo_nome_contato" type="${TYPE_TEXTO}">
				<constraints nullable="false" />
			</column>
			<column name="tipo_" type="${TYPE_TEXTO}">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addForeignKeyConstraint baseColumnNames="id_medicamento"
	                             baseTableName="cirurgia"
	                             constraintName="FK_CIRURGIA_MEDICAMENTO"
	                             referencedColumnNames="id_medicamento"
	                             referencedTableName="medicamento"/>
	</changeSet>

	<changeSet id="create_table_cirurgia_aud" author="camila.morais">
		<createTable tableName="cirurgia_aud">
			<column name="id_cirurgia" type="${TYPE_ID}">
				<constraints nullable="true" />
			</column>
			<column name="tipo_cirurgia" type="${TYPE_TEXTO}">
				<constraints nullable="true" />
			</column>
			<column name="data_cirurgia" type="${TYPE_DATA}">
				<constraints nullable="true" />
			</column>
			<column name="clinica_responsavel" type="${TYPE_TEXTO}">
				<constraints nullable="true" />
			</column>
			<column name="medico_responsavel" type="${TYPE_TEXTO}">
				<constraints nullable="true" />
			</column>
			<column name="id_medicamento" type="${TYPE_ID}">
				<constraints nullable="true" foreignKeyName="FK_CIRURGIA_MEDICAMENTO" references="medicamento(id_medicamento)"/>
			</column>
			<column name="rev" type="${TYPE_INTEGER}">
				<constraints nullable="true" referencedTableName="revinfo"
					referencedColumnNames="rev" foreignKeyName="cirurgia_revinfo_fk" />
			</column>
			<column name="revtype" type="${TYPE_INTEGER}">
				<constraints nullable="true" />
			</column>
		</createTable>
		<addPrimaryKey constraintName="cirurgia_aud_pkey"
			tableName="cirurgia_aud" columnNames="id_cirurgia, rev" />
	</changeSet>

</databaseChangeLog>